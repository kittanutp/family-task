<p style="color: green"><%= notice %></p>

<h2>Task assigned to <%=@family_member.name %></h2>
<%= link_to "Add task", new_task_path %>

<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th>Task</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @family_member.tasks.each do |task| %>
    <tr>
    <td><%= task.task %></td>
    <td><%= task.status %></td>
     <td>
    <% if task.status == "incomplete"%>
      <%= link_to "Mark as completed", tasks_set_status_path(task) %>
    <%end%>
    </tr>
  <% end %>
</table>


<%= link_to "Delete all tasks", tasks_delete_all_path%>
<br>
<%= link_to "Back to dashboard", family_members_path%>
