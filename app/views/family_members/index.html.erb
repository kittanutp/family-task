<p style="color: green"><%= notice %></p>

<h1>Family Member Dashboard</h1>
<%= link_to "Add family member", new_family_member_path %>

<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Tasks</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @family_members.each do |family_member| %>
    <tr>
    <td><%= family_member.name %></td>
    <td><%= family_member.tasks.length %></td>
    <td><%= link_to "View tasks", family_member_path(family_member) %></td>
    </tr>
  <% end %>
</table>


<%= link_to "View All Tasks", 'tasks#index'%>

